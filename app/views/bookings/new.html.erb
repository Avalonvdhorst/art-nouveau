<div class="background-booking" style="background-image: url('<%= cl_image_path("NOVOART/background_index")%>')">
  <div class="margin-upper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 background-white">
          <div class="form-new">
            <h5 id="price" data-price="<%= @art.price_per_week %>"> <%= @art.name %> : €<%= @art.price_per_week %> per week</h5>
            <%= simple_form_for [@art, @booking] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>

              <%= f.label :start_hour, class: "text-form" %>
              <%= f.select :start_hour, 0..24 %>
              <%= f.label " :00" %>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.label :end_hour, class: "text-form" %>
              <%= f.select :end_hour, 0..24 %>
              <%= f.label " :00" %>
              <br>
              <div>
                <p >Total price: €<span id="booking_total_price" >

                </span></p>
              </div>
              <%= f.button :submit, "Confirm", class: "submit-btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
