<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1523895665936-7bfe172b757d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fill=crop&w=1050&q=80);">
  <div class="search-box">
    <%= form_tag arts_path, method: :get do %>
    <div class="form-group"></div>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "  where are you looking?",
        class: "input-search"
      %>
      <%= submit_tag "Search", class: "input-button-search" %>
    <% end %>
  </div>
  <div class="right-side-content">
    <div class="title-box">
      <p>FIND</p>
      <p>NEW ART</p>
      <p>FOR YOUR</p>
      <p>SPACE</p>
    </div>
    <h4 class="tagline-italic">Changing art at the heart of the home</h4>
    <div class="button-index-page">
      <%= link_to "See all available art", arts_path %>
    </div>
  </div>
</div>

