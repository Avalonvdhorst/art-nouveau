<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1523895665936-7bfe172b757d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div>
    <div class="search-box">
      <h1>Find new pieces for your house</h1>
      <%= form_tag arts_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Where are you looking?"
        %>
        <%= submit_tag "Search", class: "btn btn-info" %>
      <% end %>
    </div>
    <div class="button-index-page">
      <%= link_to "See al available art", arts_path %>
    </div>
  </div>
  <div class="title-box">
    <h1>Art Nouveau</h1>
    <h3>changing art at the heart of the home</h3>
  </div>
</div>


